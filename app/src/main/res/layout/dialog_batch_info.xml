<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_dialog_deny"
        android:orientation="vertical"
        android:padding="20dp"

        >



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/batch_name"
            android:textSize="@dimen/TEXT_DIMEN_32PX"
            android:textColor="@color/black_alert_3"
            />

        <TextView
            android:id="@+id/tv_batch_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="@string/reload_alert"
            android:textSize="@dimen/TEXT_DIMEN_32PX"
            android:textColor="@color/black_alert_3"

            />







    </LinearLayout>

</RelativeLayout>