<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_dialog_deny"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_message_duoble"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/reload_alert"
            android:textSize="@dimen/TEXT_DIMEN_32PX"
            android:textColor="@color/black_alert_3"

            />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/bg_all"
            />


        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_double_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="取消"
                android:layout_weight="1"
                android:textColor="@color/gray_666"
                android:textSize="@dimen/TEXT_DIMEN_34PX"
                />


            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:background="@color/bg_all"
                />


            <TextView
                android:id="@+id/tv_double_sure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="确认"
                android:textColor="@color/the_green_normal"
                android:textSize="@dimen/TEXT_DIMEN_34PX"
                />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>